      <a href="http://jade-lang.com/command-line" target="_blank">Linea de Cpmandos</a>.
      
    //Interpolacion de codigo JS
    
    br
    button#presioname.boton Presioname
    script.
      //alert('JavaScript ejecutado desde Jade')
      document.querySelector('#presioname').onclick = function(){
        alert('Haz presionado el boton JS desde Jade')
      }
    
    //Creacionn de variables JS dentro del codigo JADE
    -var nombre = 'Jade';
    p Hola #{nombre}  
   
    -var fecha = new Date();
    -var hora = fecha.getHours(); 

    if (hora < 12)
      p La hora #{hora} es antes del meridino (AM)
    else
      p La hora #{hora} es despues del meridino (PM)
    
    -var seasons = ['Primavera', 'Verano', 'Otonio', 'Invierno'];
    
    h2 Estaciones del anio
    ol
      each season in seasons
        li #{season}
    
    //MIXIN
    mixin monthsSeasonsMexico(season, months)
        div.item
          h3 #{season}
          ul 
            each month in months
              li #{month}
              
    h2 Estaciones del anio en Mexico
    article.container
      +monthsSeasonsMexico(seasons[0], ['Abril','Mayo','Junio'])
      +monthsSeasonsMexico(seasons[1], ['Julio','Agosto','Septiembre'])
      +monthsSeasonsMexico(seasons[2], ['Octubre','Noviembre','Diciembre'])
      +monthsSeasonsMexico(seasons[3], ['Enero','Febrero','Marzo'])
      
